                    <div class="card-body">
						<div class="d-sm-flex flex-wrap justify-content-between mb-4 align-items-center">
							<h4 class="header-title mb-0">Add New Medical Record</h4>
                        </div>
						<form action="" method="POST" onsubmit="return validation()">
						  <div class="row">
							<div class="col-6">
								<table class="table">
									<tr>
										<div class="form-group">
                        <td><label for="mID" class="col-form-label">MID</label></td>
                        <td><input class="form-control" value="M<%= mid%>" type="text" id="mID" name="mID" readonly></td>
                    </div>
									</tr>
									<tr>
										<div class="form-group">
                        <td><label for="title" class="col-form-label">Title</label></td>
                        <td><input class="form-control" type="text" id="title" name="title" placeholder="Eg. Fever">
										                <div id="errorTitle" class="text-danger"></div>
                        </td>
                    </div>
									</tr>
									<tr>
										<div class="form-group">
                        <td><label for="admission" class="col-form-label">Admission</label></td>
                        <td><input class="form-control" type="date" id="admission" name="admission"></td>
                    </div>
									</tr>

								</table>
							</div>
							<div class="col-6">
								<table class="table">
									<tr>
										<div class="form-group">
                          <td><label for="todayDate" class="col-form-label">Date</label></td>
                          <td><input class="form-control" type="text" name="todayDate" value="<%= date%>" id="todayDate" readonly></td>
                    </div>
									</tr>
									<tr>
										<div class="form-group">
                        <td><label for="doctorIncharge" class="col-form-label">Doctor Incharge</label></td>
                        <td><input class="form-control" value="<%= user.name %>" name="doctorIncharge" type="text" id="doctorIncharge" readonly></td>
                    </div>
									</tr>
									<tr>
										<div class="form-group">
                        <td><label for="discharge" class="col-form-label">Discharged Date:</label></td>
                        <td><input class="form-control" type="date" name="discharge" id="discharge"></td>
                    </div>
									</tr>
								</table>
							</div>
						</div>
						<div>
							<table class="table ">
								<tr>

									<div class="form-group">
                                        <td class="title-name"><label for="description" class="col-form-label">Description</label></td>
                                        <td><textarea class="form-control" name="description" type="text" id="description"></textarea>
										<div id="errorDescription" class="text-danger"></div></td>

									</div>


								</tr>
								<tr>
									<div class="form-group">
                                        <td class="title-name"><label for="notes" class="col-form-label">Notes</label></td>
                                        <td><textarea class="form-control" type="text" name="notes" id="notes"></textarea></td>
                                    </div>
								</tr>
							</table>
						</div>
								<a href="/medicalRecord/?id=<%= id%>" class="btn btn-outline-primary">Back</a>
								<!--button type="submit" class="btn btn-primary">Add Medical Record</button-->
                <!-- Trigger the modal with a button -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Medical Record</button>

                <%- include ('./partials/modalForPrivatekey.ejs') %>
							</form>
                        </div>
