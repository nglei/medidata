        <!-- sidebar menu area start -->
        <div class="sidebar-menu">
            <div class="sidebar-header">
                <div class="logo">
                    <!--a href="#"><h3>MediData Blockchain Technology</h3></a-->
                </div>
            </div>
            <div class="main-menu">
